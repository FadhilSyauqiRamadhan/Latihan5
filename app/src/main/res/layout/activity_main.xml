<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtJudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Aplikasi  Perhitungan"
            android:textSize="34sp"
            android:textStyle="bold"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="50sp"/>

        <Button
            android:id="@+id/btnSuhu"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mengkonversi Suhu" />

        <Button
            android:id="@+id/btnBilangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Bilangan Ganjil Genap"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnBelanja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Belanja"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnRuang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bangun Ruang"
            android:textStyle="bold"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>